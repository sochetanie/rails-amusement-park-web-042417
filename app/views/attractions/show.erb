<h1>Welcome to <%= @attraction.name %>!</h1>

<h3>Tickets Needed: <%= @attraction.tickets %></h3><br>
<h3>Nausea Rating: <%= @attraction.nausea_rating %></h3><br>
<h3>Happiness Rating: <%= @attraction.happiness_rating %></h3><br>
<h3>Minimum Height: <%= @attraction.min_height %> inches</h3><br>

<% if current_user.admin == true %>
<%= link_to "Edit Attraction", edit_attraction_path %>

<% else %>
<%= form_tag "/rides", method: :post do %>
<%= hidden_field_tag "attraction", @attraction.id %>
<%= submit_tag "Go on this ride", id: "my-button" %>
<% end %>
<!-- <button id="my-button" method="POST" action="/rides">Go on this ride</button> -->
<% end %>
